<svg
  width="200"
  height="200"
  class="interactive-svg"
  role="button"
  tabindex="0"
>
  <circle cx="100" cy="100" r="40" class="pulse"></circle>
</svg>

<style>
  .pulse {
    fill: steelblue;
    transition: fill 0.3s ease;
  }

  .pulse:hover {
    fill: coral;
  }

  @media (hover: none) {
    .interactive-svg {
      cursor: pointer;
    }

    .interactive-svg.active .pulse {
      fill: coral;
    }
  }
</style>

<script>
  const svg = document.querySelector(".interactive-svg") as SVGElement | null;

  svg?.addEventListener("click", () => {
    svg.classList.toggle("active");
  });

  svg?.addEventListener("keydown", (e) => {
    const event = e as KeyboardEvent;
    if (event.key === "Enter" || event.key === " ") {
      svg.classList.toggle("active");
    }
  });
</script>
