<svg
  width="200"
  height="200"
  class="interactive-svg"
  role="button"
  tabindex="0"
>
  <rect x="60" y="60" width="80" height="80" class="spin-box"></rect>
</svg>

<style>
  .spin-box {
    fill: mediumseagreen;
    transform-origin: center;
    transform: rotate(0deg) scale(1);
    transition: transform 0.4s ease-out;
  }

  .spin-box:hover {
    transform: rotate(180deg) scale(1.1);
  }

  @media (hover: none) {
    .interactive-svg {
      cursor: pointer;
    }

    .interactive-svg.active .spin-box {
      transform: rotate(180deg) scale(1.1);
    }
  }
</style>

<script>
  const svg = document.querySelector(".interactive-svg") as SVGElement | null;

  svg?.addEventListener("click", () => {
    svg.classList.toggle("active");
  });

  svg?.addEventListener("keydown", (e) => {
    const event = e as KeyboardEvent;
    if (event.key === "Enter" || event.key === " ") {
      svg.classList.toggle("active");
    }
  });
</script>
