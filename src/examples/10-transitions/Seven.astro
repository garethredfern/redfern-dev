<div class="p-5 border border-slate-500">
  <button class="btn">
    <svg width="24" height="24" viewBox="0 0 24 24" class="arrow">
      <path
        d="M 5 12 H 19 M 12 5 L 19 12 L 12 19"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        fill="none"></path>
    </svg>
    Next
  </button>
</div>

<style>
  .btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
    cursor: pointer;
  }

  .arrow {
    transition: transform 0.2s ease-out;
  }

  .btn:hover .arrow {
    transform: translateX(4px);
  }

  .btn.active .arrow {
    transform: translateX(4px);
  }

  @media (hover: none) {
    .btn:active .arrow {
      transform: translateX(4px);
    }
  }
</style>

<script>
  const btn = document.querySelector(".btn");

  btn?.addEventListener("touchstart", () => {
    btn.classList.add("active");
  });

  btn?.addEventListener("touchend", () => {
    btn.classList.remove("active");
  });
</script>
