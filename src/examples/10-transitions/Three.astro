<svg width="200" height="200" class="interactive-svg">
  <circle cx="100" cy="100" r="60" fill="coral" class="fade"></circle>
  <text x="100" y="105" text-anchor="middle" class="label">Tap me</text>
</svg>

<style>
  .label {
    opacity: 0;
    transition: opacity 0.3s;
  }

  svg:hover .label {
    opacity: 1;
  }

  @media (hover: none) {
    .interactive-svg {
      cursor: pointer;
    }

    .interactive-svg.active .label {
      opacity: 1;
    }
  }
</style>

<script>
  const svg = document.querySelector(".interactive-svg");
  svg?.addEventListener("click", () => {
    svg.classList.toggle("active");
  });
</script>
