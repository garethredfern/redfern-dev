---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const allArticles = await getCollection("articles");

const tagCounts = allArticles.reduce(
  (acc, article) => {
    const tags = article.data.tags || [];
    tags.forEach((tag) => {
      acc[tag] = (acc[tag] || 0) + 1;
    });
    return acc;
  },
  {} as Record<string, number>
);

const sortedTags = Object.entries(tagCounts).sort((a, b) =>
  a[0].localeCompare(b[0])
);

const title = "All Tags";
const description = "Browse all article tags and find content by topic.";
---

<BaseLayout {title} {description}>
  <div class="border-b border-white/10 p-5 ml-2 lg:pl-35">
    <h2 class="text-sm text-primary uppercase">All Tags</h2>
    <h3 class="text-sm text-primary lowercase">
      {sortedTags.length} tag{sortedTags.length !== 1 ? "s" : ""}
    </h3>
  </div>

  <div class="px-5 py-5 ml-2 lg:ml-30 lg:w-1/2">
    <ul class="flex flex-wrap gap-3">
      {
        sortedTags.map(([tag, count]) => (
          <li>
            <a
              href={`/tags/${tag}`}
              class="inline-block px-3 py-1 border border-white/10 text-white hover:border-primary hover:text-primary transition-colors"
            >
              {tag}
              <span class="text-gray-400 text-sm">({count})</span>
            </a>
          </li>
        ))
      }
    </ul>
  </div>

  <div class="my-5 px-5 ml-2 lg:ml-30 lg:w-1/2">
    <a href="/" class="text-primary uppercase text-sm hover:underline">
      Back to Articles
    </a>
  </div>
</BaseLayout>
