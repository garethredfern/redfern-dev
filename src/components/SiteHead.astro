---
interface Props {
  title: string;
  description: string;
  article?: {
    pubDate: Date;
    tags?: string[];
  };
  pagination?: {
    prev?: string;
    next?: string;
  };
}

const { title, description, article, pagination } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteName = "redfern.dev";
const fullTitle = Astro.url.pathname === "/" ? title : `${title} | ${siteName}`;

// JSON-LD structured data for articles
const articleSchema = article
  ? {
      "@context": "https://schema.org",
      "@type": "Article",
      headline: title,
      description: description,
      datePublished: article.pubDate.toISOString(),
      url: canonicalURL.href,
      author: {
        "@type": "Person",
        name: "redfern.dev",
      },
      publisher: {
        "@type": "Organization",
        name: siteName,
        url: Astro.site,
      },
      keywords: article.tags?.join(", "),
    }
  : null;

// Website schema for non-article pages
const websiteSchema = !article
  ? {
      "@context": "https://schema.org",
      "@type": "WebSite",
      name: siteName,
      url: Astro.site,
    }
  : null;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="canonical" href={canonicalURL} />
  <title>{fullTitle}</title>
  <meta name="description" content={description} />
  <link rel="icon" href="/favicon.svg?v=1" type="image/svg+xml" />
  <link
    rel="alternate"
    type="application/rss+xml"
    title="redfern.dev RSS Feed"
    href="/rss.xml"
  />

  <!-- Pagination SEO -->
  {pagination?.prev && <link rel="prev" href={pagination.prev} />}
  {pagination?.next && <link rel="next" href={pagination.next} />}

  <!-- Open Graph -->
  <meta property="og:type" content={article ? "article" : "website"} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:site_name" content={siteName} />
  <meta property="og:image" content={new URL("/og-image.png", Astro.site)} />
  <meta property="og:locale" content="en_US" />
  {article && <meta property="article:published_time" content={article.pubDate.toISOString()} />}

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL("/og-image.png", Astro.site)} />

  <!-- Structured Data -->
  {articleSchema && <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />}
  {websiteSchema && <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />}
</head>
